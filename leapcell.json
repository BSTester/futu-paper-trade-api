{
  "name": "futu-trading-api",
  "build": {
    "command": "pip install -r requirements.txt"
  },
  "start": {
    "command": "uvicorn main:app --host 0.0.0.0 --port $PORT"
  },
  "env": {
    "FUTU_COOKIE": {
      "description": "富途牛牛Web端的Cookie（必填）",
      "required": true
    },
    "FUTU_CSRF_TOKEN": {
      "description": "富途牛牛Web端的CSRF Token（必填）",
      "required": true
    },
    "ACCOUNT_ID_HK": {
      "description": "港股账户ID（如需交易港股则必填）",
      "required": false
    },
    "ACCOUNT_ID_US": {
      "description": "美股模拟账户ID（如需交易美股则必填）",
      "required": false
    },
    "ACCOUNT_ID_CN": {
      "description": "A股账户ID（如需交易A股则必填）",
      "required": false
    },
    "ACCOUNT_ID_US_COMPETITION": {
      "description": "美股比赛账户ID（可选，如配置则优先使用比赛账户）",
      "required": false
    },
    "API_KEY": {
      "description": "API接口鉴权密钥（可选，建议设置）",
      "required": false
    },
    "API_HOST": {
      "description": "API服务监听地址",
      "value": "0.0.0.0"
    },
    "API_PORT": {
      "description": "API服务端口",
      "value": "8000"
    }
  }
}
